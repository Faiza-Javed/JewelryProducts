@model MC_Products.Models.Product
@{
    ViewBag.Title = "EditProduct";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <br>
        <br>
        <h1>
            Add New User
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Dashboard</li>
            <li>Manage Product</li>
            <li class="active">Add Product</li>
        </ol>
    </section>

    <section class="content">

        <form method="post" action="~/Home/updateProduct">
            <br>
            <br>
            <br>
            <div class="row">
                <div class="form-group col-md-8">
                    <label class="col-md-3 control-lable" for="dob">Product Name</label>
                    <div class="col-md-9">
                        <input type="text" path="dob" id="Name" name="Name" value="@Model.Name" class="form-control input-sm" />
                        <input type="hidden"  id="Id" name="Id" value="@Model.Id" class="form-control input-sm" />

                         </div>
                    <label class="col-md-3 control-lable" for="dob">Catagory</label>
                    <div class="col-md-9">
                        <input type="text" path="dob" id="Cat_Name" name="Cat_Name" value="@Model.Cat_Name" class="form-control input-sm" />
                    </div><br />
                    <label class="col-md-3 control-lable" for="dob">Price</label>
                    <div class="col-md-9">
                        <input type="text" path="dob" id="Price" class="form-control input-sm" name="Price" value="@Model.Price" />
                    </div>
                </div>
            </div>


            <div align="center" class="row">
                <div class="form-actions floatRight col-md-8">
                    <input type="reset" value="Reset" class="btn btn-primary btn-sm">
                    <input type="submit" value="Submit" class="btn btn-primary btn-sm">
                </div>
            </div>
        </form>
    </section>
</div>



      </aside><!-- /.control-sidebar -->
<!-- Add the sidebar's background. This div must be placed
     immediately after the control sidebar -->
<div class="control-sidebar-bg"></div>
    </div>


