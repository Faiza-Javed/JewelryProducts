@model List<MC_Products.Models.Product>
@{
    ViewBag.Title = "EditUpdateProduct";
}
<script src="~/Scripts/jquery.js"></script>
<script type="text/javascript">
    $(function () {


        $(".btn_delete").click(function () {

            //Save the link in a variable called element
            var element = $(this);
            var id=$('#Id')
            //Find the id of the link that was clicked
            var del_id = element.attr("Id");

            //Built a url to send
            var Id = 'id=' + del_id;
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("deleteProduct", "Home")",
                    data: id,
                    success: function () {
                        alert("Data deleted successfully");

                    }
                });
            $(this).parents(".record").animate({ backgroundColor: "#fbc7c7" }, "fast")
           .animate({ opacity: "hide" }, "slow");



        });
        //return false;

    });
</script>

<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
		<br>
		<br>
          <h1>
            View/Edit Product
            <small></small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Dashboard</li>
			<li>Manage Routes</li>
			<li class="active">View/Edit Product</li>
          </ol>
        </section>
		
		<section class="content">
         <div class="row">
 
 
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            List Of Product
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Cataogory</th>
                                            <th>Name of Product</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var data in Model) { 
                                 <tr class="record">
                                            <td>@data.Id</td>
                                            <td>@data.Cat_Name</td>
                                            <td>@data.Name</td>
                                            <td>@data.Price</td>
                                              <input type="hidden" value="@data.Id" id="Id" name="Id" />
                                     <td>
                                     <form action="~/Home/EditProduct" method="post">
                                         <td>
                                             <input type="hidden" value="@data.Id" id="Id" name="Id" />
                                             <input type="submit" class="btn btn-success" value="Update" >
                                             <a href="#" class="btn btn-danger btn_delete" id=@data.Id>Delete</a>
                                     </form>

                                            </td>

                                        </tr>
                                        }
	                                 
								</tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
		 </section>

        </div>
      </aside>
    
      <div class="control-sidebar-bg"></div>
 